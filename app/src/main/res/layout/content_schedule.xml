<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/CustomTextView_Day"
            android:layout_marginLeft="60dp"
            android:text="오늘" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="12 AM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="1 AM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="2 AM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="3 AM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="4 AM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="5 AM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="6 AM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="7 AM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="8 AM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="9 AM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="10 AM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="11 AM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="12 PM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="1 PM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="2 PM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="3 PM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="4 PM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="5 PM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="6 PM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="7 PM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="8 PM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="9 PM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="10 PM" />

                <TextView
                    style="@style/CustomTextView_Time"
                    android:text="11 PM" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/today_layout"
                style="@style/CustomLinearLayout_schedule"></LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>

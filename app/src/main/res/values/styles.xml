<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomTextView_Time" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">right</item>
        <Item name="android:textSize">20dp</Item>
    </style>
    <style name="CustomTextView_Day" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <Item name="android:textSize">20dp</Item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="CustomLinearLayout_schedule">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1440dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>



</resources>
